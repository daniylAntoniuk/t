
@{
    ViewData["Title"] = "Register";
}
@model GeekStore.Data.ViewModels.RegisterViewModel
    <form method="post" asp-controller="Account" asp-action="Register">
        <div class="container register">
            <div class="row">
                <div class="col-md-3 register-left">
                    <img class="img-anim" src="~/img/logo.png" alt="" />
                    <h3>Welcome</h3>
                    <p>You are 30 seconds away from buying with the lowest prices!</p>
                    <a asp-controller="Account" asp-action="Login" style="text-decoration: inherit;color:inherit; position: inherit;">
                        <input type="button"  value="Login" /><br />
                    </a>
                </div>
                <div class="col-md-9 register-right">

                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <h3 class="register-heading">Sign up</h3>
                            <div class="row register-form">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="text" class="form-control" asp-for="FirstName" placeholder="First Name *" value="" />
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control" asp-for="LastName" placeholder="Last Name *" value="" />
                                    </div>
                                    <div class="form-group">
                                        <input type="password" onfocus="setInpPaswd()" onblur="paswdCheck()"  id="inputPassword4" class="form-control" asp-for="Password" placeholder="Password *" value="" />
                                        <div class="Error" id="errorPaswd"></div>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control" asp-for="PasswordConfirm" placeholder="Confirm Password *" value="" />
                                        <span asp-validation-for="PasswordConfirm" class="badge badge-secondary badge-danger"></span>
                                    </div>
                                    @*<div class="form-group">
                                        <div class="maxl">


                                            <label class="cont">
                                                Male
                                                <input type="checkbox">
                                                <span class="checkmark"></span>
                                            </label>
                                            <label class="cont">
                                                Female
                                                <input type="checkbox">
                                                <span class="checkmark"></span>
                                            </label>
                                           
                                        </div>
                                    </div>*@
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="email" asp-for="Email" class="form-control" placeholder="Your Email *" value="" />
                                    </div>
                                    <div class="form-group">
                                        <input type="text" asp-for="Phone" minlength="10" maxlength="13" class="form-control" onfocus="phoneLoad()" placeholder="Phone *" value="" />
                                        
                                    </div>
                                    <div class="form-group">
                                        <input type="text" asp-for="Sity" minlength="3" maxlength="15"   class="form-control" placeholder="Sity *" value="" />
                                    </div>
                                    <div class="form-group">
                                        <div class="flex-row">
                                            <img src="~/img/new_post.png" style="width:30px;height:30px; align-self:center; margin-right:3px;" />
                                            <input type="text" asp-for="PostDepartament" minlength="1" maxlength="4" class="form-control" placeholder="New Post departament *" value="" />
                                        </div>
                                    </div>
                                    <input type="submit" class="btnRegister" onclick="paswdCheck()" value="Register" />
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </form>
<script>
    let mediumRegex = new RegExp("^(((?=.*[a-z])(?=.*[A-Z]))|((?=.*[a-z])(?=.*[0-9]))|((?=.*[A-Z])(?=.*[0-9])))(?=.{6,})");
    function setInpPaswd() {
            errorPaswd.innerHTML = "";
            isGood = true;
        };
    function paswdCheck() {
            if (inputPassword4.value === "" || inputPassword4.value === undefined) {
                isGood = false;
                errorPaswd.innerHTML = 'Input Password !';
            }
            else if (!mediumRegex.test(inputPassword4.value)) {
                isGood = false;
                errorPaswd.innerHTML = 'Input correct Password !';
            }
    }
    
</script>


