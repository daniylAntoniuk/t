    window.onscroll = function() {scrl()};
    let width = $(window).width();
    function scrl() {
        
        if (document.body.scrollTop > 500 || document.documentElement.scrollTop > 500) {
            $("#adv-img").fadeIn(1500);
    }
            if (width < 700) {
                $("#adv-img").fadeIn(1500);
            }
    }

    if (width < 700) { adv2.hidden = true; }
