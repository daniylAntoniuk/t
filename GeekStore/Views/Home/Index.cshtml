                                fr.readAsDataURL(tgt.files);
                                console.log(fr.readAsDataURL(tgt.files[0]));
                            }
                        }
                    </script>*@
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/jquery-2.2.4.min.js" asp-append-version="true"></script>
