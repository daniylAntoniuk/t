<style>
    .category:hover {
        text-decoration: underline;
        color: #5900cb;
    }
</style>
<div class="bar" >
    <ul class="side-bar" style="border-right:none;">
        @{
            foreach (CategoryViewModel Category in Model)
            {

                <a asp-controller="Product" asp-action="Category" asp-route-id="@Category.Category.Id" style="text-decoration: inherit;color:inherit; position: inherit; ">
                    <li class="el category" style="padding-left: 10px;">
                        @Category.Category.Name
                    </li>
                </a>
                foreach (Subcategory subcategory in Category.Subcategories)
                {
                    <a asp-controller="Product" asp-action="CategoryProducts" asp-route-id="@subcategory.Id" style="text-decoration: inherit;color:inherit; position: inherit; ">
                        <li class="subcategories" style=" padding-left: 25px; font-size:20px">
                            @subcategory.Name
                        </li>
                    </a>
                }


            }


        }
        <hr />
        <div class="ml-2">
            <p class="text-muted" style="font-size:18px;">Call-centre</p>
            <p>+38 044 537-02-22<br />+38 044 537-02-22</p>
        </div>
    </ul>

</div>